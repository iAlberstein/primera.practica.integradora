<h1>HOME</h1>

<div class="product">
    {{#each productos}}
        <div class="card">
            <img src="{{this.img}}" alt="{{this.title}}" class="card-image">
            <div class="card-content">
                <h2>{{this.title}}</h2>
                <p class="description">{{this.description}}</p>
                <p class="price">${{this.price}}</p>
            </div>
        </div>
    {{/each}}
</div>

<div class="paginadores">
    <div class="prevnext">
        {{#if hasPrevPage}}
            <a href="?page={{prevPage}}"> Anterior </a>
        {{/if}}

        {{#if hasNextPage}}
            <a href="?page={{nextPage}}"> Siguiente </a>
        {{/if}}
    </div>

    <p>PÃ¡gina {{currentPage}} de {{totalPages}}</p>
</div>
